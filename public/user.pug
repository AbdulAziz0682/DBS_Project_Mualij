						li
							a(href='#') Home
						li
							a(href='#') Department
						li
							a(href='#') About
						li
							a(href='#') Contact
				.col-md-3
					h3.heading Follow us
					ul.probootstrap-footer-social
						li
							a(href='#')
								span.icon-twitter
						li
