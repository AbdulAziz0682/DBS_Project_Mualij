body(id=userData.id)
	nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.probootstrap-navbar-dark
		.container
			// <a class="navbar-brand" href="index.html">Health</a>
			button.navbar-toggler(type='button' data-toggle='collapse' data-target='#probootstrap-nav' aria-controls='probootstrap-nav' aria-expanded='false' aria-label='Toggle navigation')
				span.navbar-toggler-icon
			#probootstrap-nav.collapse.navbar-collapse
				ul.navbar-nav.mr-auto
					li.nav-item.active
						a.nav-link.pl-0(href='index.html') Home
					li.nav-item
						a.nav-link(href='about.html') About
					li.nav-item
						a.nav-link(href='contact.html') Contact
	// END nav
	section.probootstrap-services
		.container
			.row.no-gutters
				.col-md-3.probootstrap-aside-stretch-left
					.mb-3
						.probootstrap-icon.mb-3
							img(src='/images/person.png')
						h2.h5 #{userData.FirstName}
						ul.list-unstyled.probootstrap-light.mb-4(style='color:aquamarine;')
							li(onclick="showMenu('dashboard')") Dashboard
							li(onclick="showMenu('appointments')") Recent Appointments
							li(onclick="showMenu('history')") History
							li(onclick="showMenu('accountSettings')") Account Settings
				.col-md-9.pl-md-5.pl-0
					#dashboard(style='display: block; text-align: center;')
						h3(style='background-color: aqua; font-weight: bold;') Dashboard
						// Dashboard
						h1 Welcome Back UserName
						br
						br
						table(width='100%')
							tbody
								tr
									td(onclick="showMenu('appointments')")
										img(src='../images/accepted.png' alt='accepted')
									td(onclick="showMenu('history')")
										img(src='../images/history.png' alt='history')
									td(onclick="showMenu('history')")
										img(src='../images/feedback.jpg' alt='feedback')
								tr
									td
										p
										| Your appointment 
										br
										| was accepted
									td
										p
										| Look at your 
										br
										|  previous appointments
									td
										p
										| Give your 
										br
										|  valuable feedback
					#appointments.container(style='display: none; text-align: center;')
						#pendingAccepted
							h3(style='background-color: aqua; font-weight: bold;') Recent Appointments
							table#pendingAcceptedList.table.table-sm.table-hover.table-bordered(width="100%")
								thead
									tr
										th S.No 
										th Doctor Name 
										th Time 
										th Day
										th Date
										th Department
										th Gender 
										th Address  
										th Status 
								tbody
						#rejected
							h3(style='background-color: aqua; font-weight: bold;') Rejected Appointments
							table#rejectedList.table.table-sm.table-hover.table-bordered(width="100%")
								thead
									tr
										th S.No 
										th Doctor Name 
										th Time 
										th Day
										th Date
										th Department
										th Gender 
										th Address  
										th Status  
								tbody
						div#newAppt.table-responsive(style="display: block;")
							h3(style='background-color: aqua; font-weight: bold;')  Available Doctors 
							div#message
								span#errorMessage(style="color:lightcoral; font-weight: bold;") #{errorMessage ? errorMessage : ''}
								span#successMessage(style="color: lightgreen; font-weight: bold;") #{successMessage ? successMessage : ''}
							#doctorDetails.container(style="text-align: left; display:none;")
								.row 
									.col-12 
										h2#doctorName(style="text-align: center") DoctorName
								.row 
									.col-4 
										p#availability Time: 
									.col-4 
										p#weekDays Days: 
									.col-4 
										p#department Department: 
								.row 
									.col-4 
										p#age Age: 
									.col-4 
										p#gender Gender: 
									.col-4 
										p#ratings Ratings: 
								.row 
									.col-12  
										p#address Address: 
								.row 
									.col-4 
										label(for="time") Time: 
										input#time(type="time")
									//.col-4 
										label(for="day") Day: 
										select#day 
											- 	let daysArray = ["MON", "TUE", "WED", "THU", "FRI", "SAT", "SUN"];
												each item in daysArray 
													option(value=item) #{item}
									.col-4 
										label(for="date") Date: 
										input(type="date" name='date' id='date')
									.col-4 
										button#sendRequest Send Request
							table#doctorsList.table.table-sm.table-hover.table-bordered(width="100%")
								thead
									tr
										th S.No 
										th Doctor Name 
										th Time 
										//th Week Days 
										th Department
										th Age 
										th Gender 
										//th Address  
										//th Overall Ratings 
										//th Appointment Action
								tbody
					#history.container(style='display: none; text-align: center;')
						#completed
							h3(style='background-color: aqua; font-weight: bold;') Completed Appointments
							table#completedList.table.table-sm.table-hover.table-bordered(width="100%")
								thead
									tr
										th S.No 
										th Doctor Name 
										th Time 
										th Day
										th Date
										th Department
										th Gender 
										th Address  
										th Status  
										th Prescription
								tbody
					#accountSettings.container(style='display: none; text-align: center;')
						h3(style='background-color: aqua; font-weight: bold;') Account Settings
						#updateAccountMessage 
							span#updateAccountError.bg-danger.text-white 
							span#updateAccountSuccess.bg-success.text-white
						p.text-info Click Submit to Update your details
						div.container
						-	let {FirstName, LastName, Email, Password, Age, Gender, Address} = userData;
							div.bg-dark 
								.form-group
									label(for='firstName') First Name:
									input#firstName.form-control(type='text' placeholder='First name' name='FirstName' value=FirstName)
								.form-group
									label(for='lastName') Last Name:
									input#lastName.form-control(type='text' placeholder='Last Name' name='LastName' value=LastName)
								.form-group
									label(for='email') Email address
									input#email.form-control(type='email' name='Email' placeholder='Enter email' value=Email)
								.form-group
									label(for='password') Password
									input#password.form-control(type='password' name='Password' placeholder='Password' value=Password)
								.form-group
									label(for='age') Age
									input#Age.form-control(type='number' name='Age' placeholder='18' value=Age)
								.form-group
									label(for='gender') Gender
									input#Gender.form-control(type='text' name='Gender' placeholder='Male' value=Gender)
								.form-group
									label(for='address') Address
									input#Address.form-control(type='text' name='Address' placeholder='Address' value=Address)
								button.btn.btn-primary(onclick='updateAccount()') Submit
							br
