	script(src='js/bootstrap.min.js')
	script(src='js/owl.carousel.min.js')
	script(src='js/jquery.waypoints.min.js')
	script(src='js/bootstrap-datepicker.js')
	script(src='js/jquery.animateNumber.min.js')
	script(src='js/userFrontend.js')
	script(src='js/main.js')
	script(src="js/Time.js") 
	script.
		function showMenu(id){
			let menus = ['dashboard', 'appointments', 'history', 'accountSettings'];
			menus.forEach(function(element){
				if(element===id) {
					$('#'+element).show();
				}
				else {
					$('#'+element).hide();
				}
				if(element==='appointments') loadDoctorsList();
				if(element==='history') loadCompletedList();
				//if(element==='accountSettings') //loadUserDetails();
			});
		}
